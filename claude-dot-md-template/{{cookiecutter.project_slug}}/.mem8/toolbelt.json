{
  "version": 1,
  "tiers": {
    "core": [
      {
        "name": "Git",
        "command": "git",
        "platforms": ["windows", "macos", "linux"],
        "min_version": "2.40.0",
        "notes": "Required for source control and workspace bootstrap scripts.",
        "install": {
          "windows": ["winget install --id Git.Git -e"],
          "macos": ["brew install git"],
          "linux": ["sudo apt install git"]
        }
      },
      {
        "name": "GitHub CLI",
        "command": "gh",
        "platforms": ["windows", "macos", "linux"],
        "min_version": "2.30.0",
        "notes": "Enables GitHub authentication, issue management, and API helpers.",
        "install": {
          "windows": ["winget install --id GitHub.cli -e"],
          "macos": ["brew install gh"],
          "linux": ["https://github.com/cli/cli#installation"]
        }
      },
      {
        "name": "ripgrep",
        "command": "rg",
        "platforms": ["windows", "macos", "linux"],
        "notes": "Fast project-wide search used by agents and scripts.",
        "install": {
          "windows": ["winget install --id BurntSushi.ripgrep.MSVC -e"],
          "macos": ["brew install ripgrep"],
          "linux": ["sudo apt install ripgrep"]
        }
      },
      {
        "name": "fd",
        "command": "fd",
        "platforms": ["windows", "macos", "linux"],
        "notes": "Friendly file finder leveraged by automation routines. Debian-based distros install the binary as fdfind; symlink to fd if needed.",
        "install": {
          "windows": ["winget install --id sharkdp.fd -e"],
          "macos": ["brew install fd"],
          "linux": ["sudo apt install fd-find"]
        }
      },
      {
        "name": "jq",
        "command": "jq",
        "platforms": ["windows", "macos", "linux"],
        "notes": "Structured JSON processing for CLI workflows.",
        "install": {
          "windows": ["winget install --id jqlang.jq -e"],
          "macos": ["brew install jq"],
          "linux": ["sudo apt install jq"]
        }
      },
      {
        "name": "yq",
        "command": "yq",
        "platforms": ["windows", "macos", "linux"],
        "notes": "YAML and structured data manipulation companion to jq.",
        "install": {
          "windows": ["winget install --id mikefarah.yq -e"],
          "macos": ["brew install yq"],
          "linux": ["https://github.com/mikefarah/yq/#install"]
        }
      }
    ],
